module tb;
    reg a,b, [1:0] c, [2:0] d;

    initial begin
        a = 1'b0;
        #10 b = 1'b1;
        fork
            #5 b = 1'b0;
            #10 c = {a,b};
        join
        #20 d = {a,c};
    end

    initial begin
        $monitor("Time: %t, A: %b, B: %b, C: %b, D: %b", $time, a, b, c, d);

        $dumpfile("wv.vcd");
        $dumpvars(0, tb);

        #60 $finish;
    end
endmodule
